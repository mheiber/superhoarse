<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleExecutable</key>
    <string>Superhoarse</string>
    <key>CFBundleIdentifier</key>
    <string>ink.maxheiber.superhoarse</string>
    <key>CFBundleName</key>
    <string>Superhoarse</string>
    <key>CFBundleDisplayName</key>
    <string>Superhoarse</string>
    <key>CFBundleVersion</key>
    <string>1.0.0</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleSignature</key>
    <string>SWLT</string>
    
    <!-- App icon -->
    <key>CFBundleIconFile</key>
    <string>AppIcon</string>
    
    <!-- Required for microphone access -->
    <key>NSMicrophoneUsageDescription</key>
    <string>Superhoarse needs microphone access to record and transcribe your speech.</string>
    
    <!-- Required for accessibility features (text insertion) -->
    <key>NSAppleEventsUsageDescription</key>
    <string>Superhoarse needs to send keystrokes to insert transcribed text into the active application.</string>
    
    <!-- Minimum macOS version -->
    <key>LSMinimumSystemVersion</key>
    <string>13.0</string>
    
    <!-- App category -->
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.productivity</string>
    
    <!-- Show in both dock and menu bar -->
    <key>LSUIElement</key>
    <false/>
    
    <!-- Required app transport security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
        <key>NSExceptionDomains</key>
        <dict>
            <key>huggingface.co</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <false/>
                <key>NSExceptionMinimumTLSVersion</key>
                <string>TLSv1.2</string>
            </dict>
        </dict>
    </dict>
    
    <!-- High resolution display support -->
    <key>NSHighResolutionCapable</key>
    <true/>
    
    <!-- Prevent App Nap -->
    <key>NSAppSleepDisabled</key>
    <true/>
</dict>
</plist>